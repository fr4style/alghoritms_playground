package com.fflorio.solutions;

/**
 * Created by Kaan on 2017-06-30.
 */
public class BruteForceSolution implements Alghoritm {

    @Override
    public int solve(int[] input) {
        if(input == null || input.length <= 0){
            return 0;
        }

        final int inputSize = input.length;
        int i = 0;
        int counter = 0;
        for (i=0; i<inputSize; i++) {
            if (input[i] != 0) {
                input[counter] = input[i];
                counter++;
            }
        }
        
        for (i=counter; i<inputSize; i++) {
            input[i] = 0;
        }
        
        return inputSize - counter;
    }

    @Override
    public String label() {
        return "Index Alghoritm";
    }
}
